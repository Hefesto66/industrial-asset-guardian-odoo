<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_iag_asset_list" model="ir.ui.view">
        <field name="name">iag.asset.list</field>
        <field name="model">iag.asset</field>
        <field name="arch" type="xml">
            <list string="Industrial Assets">
                <field name="name"/>
                <field name="asset_type"/>
                <field name="current_temperature" optional="show" widget="panic_gauge"/>
                <field name="health_score" widget="progressbar" decoration-danger="health_score &lt; 50" decoration-warning="health_score &lt; 80" decoration-success="health_score &gt;= 80"/>
                <field name="status" widget="badge" decoration-success="status == 'operational'" decoration-danger="status == 'maintenance'"/>
            </list>
        </field>
    </record>

    <record id="view_iag_asset_form" model="ir.ui.view">
        <field name="name">iag.asset.form</field>
        <field name="model">iag.asset</field>
        <field name="arch" type="xml">
            <form string="Asset">
                <header>
                    <field name="status" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="e.g. Motor Pump 3000"/></h1>
                    </div>
                    
                    <group>
                        <group string="Basic Info">
                            <field name="asset_type"/>
                            <field name="serial_number"/>
                            <field name="installation_date"/>
                        </group>
                        
                        <group string="Real-Time Monitoring">
                            <field name="current_temperature" widget="panic_gauge"/>
                            <field name="current_vibration"/>
                            
                            <field name="health_score" widget="progressbar"/> 
                            
                            <field name="max_temperature" invisible="1"/> <field name="max_vibration" invisible="1"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Specs">
                            <field name="description"/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="action_iag_asset" model="ir.actions.act_window">
        <field name="name">Industrial Assets</field>
        <field name="res_model">iag.asset</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first Asset!</p>
        </field>
    </record>

    <menuitem id="menu_iag_root" name="Industrial Guardian" web_icon="industrial_asset_guardian,static/description/icon.png" action="action_iag_asset"/>
</odoo>